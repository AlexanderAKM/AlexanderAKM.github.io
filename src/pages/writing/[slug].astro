---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { processCitations, generateBibliography } from '../../utils/citations';

// Generate static paths for all writing posts
export async function getStaticPaths() {
  const writingEntries = await getCollection('writing');
  return writingEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get the writing post for this page
const { entry } = Astro.props;
const { Content } = await entry.render();

// Process citations if there's BibTeX data
let processedContent = entry.body;
let bibliography = '';

// Check if there's BibTeX data in the content
const bibtexMatch = entry.body.match(/@\w+\{[^}]+\}/g);
if (bibtexMatch) {
  const bibtex = bibtexMatch.join('\n\n');
  processedContent = processCitations(entry.body, bibtex);
  bibliography = generateBibliography(bibtex);
}
---

<BaseLayout
  title={`${entry.data.title} | Alexander Müller`}
  description={entry.data.title}
>
  <article class="prose prose-slate dark:prose-invert max-w-none">
    <a href="/writing" class="inline-block mb-6 text-blue-600 hover:underline">← Back to all posts</a>
    
    <h1 class="text-4xl font-bold mb-2">{entry.data.title}</h1>
    <p class="text-slate-500 dark:text-slate-400 mb-8">
      {new Date(entry.data.pubDate).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
      {entry.data.tags && (
        <span class="ml-2">
          {entry.data.tags.map((tag, i) => (
            <span>
              <span class="inline-block bg-slate-200 dark:bg-slate-700 rounded-full px-2 py-1 text-xs">
                {tag}
              </span>{i < entry.data.tags.length - 1 ? ' ' : ''}
            </span>
          ))}
        </span>
      )}
    </p>
    
    <div set:html={processedContent} />
    
    {bibliography && (
      <div class="mt-12 pt-8 border-t dark:border-slate-700">
        <h2 class="text-2xl font-bold mb-4">References</h2>
        <div set:html={bibliography} />
      </div>
    )}
  </article>
</BaseLayout> 