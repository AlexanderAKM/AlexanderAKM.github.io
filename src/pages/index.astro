---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts that are not drafts
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft : true;
});

// Sort posts by date and get the latest 3
const latestPosts = posts
	.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
	.slice(0, 3);
---

<BaseLayout 
	title="Alexander's Personal Site" 
	description="Personal website and portfolio showcasing my projects, skills, and blog posts."
>
	<section class="py-12 md:py-20">
		<h1 class="text-4xl md:text-6xl font-bold mb-6">Hello, I'm Alexander</h1>
		<p class="text-xl mb-8 max-w-2xl">I'm a software developer specializing in web technologies and passionate about creating user-friendly experiences.</p>
		<div class="flex gap-4">
			<a href="/projects" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md">See my work</a>
			<a href="/contact" class="px-5 py-2 border border-blue-600 text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/30 rounded-md">Get in touch</a>
		</div>
	</section>

	<section class="py-12">
		<h2 class="text-2xl md:text-3xl font-bold mb-6">Featured Projects</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<!-- Project cards will go here -->
			<div class="border dark:border-slate-700 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
				<div class="h-48 bg-slate-200 dark:bg-slate-800"></div>
				<div class="p-4">
					<h3 class="text-xl font-bold mb-2">Project One</h3>
					<p class="text-slate-600 dark:text-slate-400 mb-4">A brief description of this amazing project and what technologies were used.</p>
					<a href="/projects/project-one" class="text-blue-600 hover:underline">View details →</a>
				</div>
			</div>
			<div class="border dark:border-slate-700 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
				<div class="h-48 bg-slate-200 dark:bg-slate-800"></div>
				<div class="p-4">
					<h3 class="text-xl font-bold mb-2">Project Two</h3>
					<p class="text-slate-600 dark:text-slate-400 mb-4">A brief description of this amazing project and what technologies were used.</p>
					<a href="/projects/project-two" class="text-blue-600 hover:underline">View details →</a>
				</div>
			</div>
		</div>
	</section>

	<section class="py-12">
		<h2 class="text-2xl md:text-3xl font-bold mb-6">Latest Blog Posts</h2>
		<div class="space-y-6">
			{latestPosts.map(post => (
				<div class="border dark:border-slate-700 rounded-lg p-6 hover:shadow-md transition-shadow">
					<h3 class="text-xl font-bold mb-2">
						<a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400">
							{post.data.title}
						</a>
					</h3>
					<p class="text-sm text-slate-500 dark:text-slate-400 mb-3">
						{new Date(post.data.pubDate).toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric'
						})}
					</p>
					<a href={`/blog/${post.slug}`} class="text-blue-600 hover:underline">Read more →</a>
				</div>
			))}
		</div>
	</section>
</BaseLayout>
